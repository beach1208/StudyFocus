<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bc"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/titleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Study Focus"
        android:textColor="#ffffff"
        android:textSize="45sp"
        app:fontFamily="@font/quicksand_light" />

    <ImageView
        android:id="@+id/circle"
        android:layout_width="286dp"
        android:layout_height="257dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:src="@drawable/circle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/switchbtn"
        android:layout_marginStart="-50dp"
        android:layout_toEndOf="@+id/switchbtn"
        android:src="@drawable/music" />

    <TextView
        android:id="@+id/timerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="183dp"
        android:text="00:00"
        android:textColor="#ffffff"
        android:textSize="70dp"
        app:fontFamily="@font/quicksand_light" />

    <Button
        android:id="@+id/setButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/resetButton"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button"
        android:text="SET"
        android:fontFamily="@font/dosis_bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="200dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/button"
        android:text="RESET"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/dosis_bold"
        android:layout_marginRight="27dp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/setButton"
        android:layout_marginBottom="107dp"
        android:background="@drawable/button"
        android:text="START"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/dosis_bold"
        android:layout_alignLeft="@+id/setButton" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/resetButton"
        android:layout_alignStart="@+id/resetButton"
        android:layout_alignTop="@+id/startButton"
        android:background="@drawable/button"
        android:text="STOP"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:fontFamily="@font/dosis_bold"
        android:textStyle="bold" />

    <Button
        android:id="@+id/checkGraphBtn"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="#4fe0e2"
        android:fontFamily="@font/dosis_bold"
        android:text="Check Study Result"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Switch
        android:id="@+id/switchbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="266dp"
        android:layout_marginEnd="50dp" />




</RelativeLayout>